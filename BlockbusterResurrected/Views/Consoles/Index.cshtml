@{
  Layout = "_Layout";
}

@using BlockbusterResurrected.Models;
@model List<BlockbusterResurrected.Models.Console>;

<h1>Consoles</h1>
<hr>

@if (@Model.Count == 0)
{
  <p>No Consoles have been listed yet</p>
}

@foreach (Console console in Model)
{
  <p>@Html.ActionLink($"{console.ConsoleName}", "Details", new { id = console.ConsoleId })</p>
}
<hr>

<p>@Html.ActionLink("Add new console", "Create")</p>
<p>@Html.ActionLink("Home", "Index", "Home")</p>