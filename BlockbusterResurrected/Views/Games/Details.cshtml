@{
  Layout ="_Layout";
}

@model BlockbusterResurrected.Models.Game

<h2>Game Details</h2>
<hr>

@if (Model.Consoles.Count == 0)
{
  <p>No console info provided</p>
}
else
{
  @foreach(var join in Model.Consoles)
  {
    <p>Console(s): @join.Console.ConsoleName</p>
  }
}
<p>Title: @Model.GameTitle</p>
<p>Copies: --</p>
<p>Availability: --</p>
<p>[Rating, description, etc.]</p>
<hr>

<p>@Html.ActionLink("Terminate game", "Delete", new { id = Model.GameId })</p>
<p>@Html.ActionLink("Edit game", "Edit", new { id = Model.GameId })</p>
<p>@Html.ActionLink("Back to games", "Index")</p>



