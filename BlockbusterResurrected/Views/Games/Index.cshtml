@{
  Layout = "_Layout";
}

@using BlockbusterResurrected.Models;
@model List<BlockbusterResurrected.Models.Game>;

<h1>Games</h1>
<hr>

@if (@Model.Count == 0)
{
  <p>No games have been listed yet</p>
}

@foreach (Game game in Model)
{
  <p>@Html.ActionLink($"{game.GameTitle}", "Details", new { id = game.GameId })</p>
}
<hr>

<p>@Html.ActionLink("Add new game", "Create")</p>
<p>@Html.ActionLink("Home", "Index", "Home")</p>